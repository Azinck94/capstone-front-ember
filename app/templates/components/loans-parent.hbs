        {{else}}
        <h1>no value</h1>
        {{/if}} --}}
        {{!-- {{loan-list/create-loan-form createLoan="createLoan"}} --}}
      </div>
      <div class="col-md-6">
        <h3>Tools</h3>
          {{loans/tools-drop-down loans=loans createLoan="createLoan" selectedLoan=selectedLoan selectTool="selectTool" selectedTool=selectedTool}}
      </div>
    </div>
  </div>
</div>
