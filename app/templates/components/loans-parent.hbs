{{page-header title="Loans"}}
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <h3>Your View</h3>
        {{!-- works --}}
        {{loans/drop-down loans=loans selectLoan="selectLoan" selectedTool="selectedTool"}}

        {{selectedLoan}}
        {{selectedLoan.id}}

        {{!-- works --}}
        {{#unless selectedLoan}}
          <h3> Select a loan to examine or create a new one </h3>
          {{/unless}}

        {{#if (eq selectedLoan "new-loan")}}
          {{loan-list/create-loan-form createLoan="createLoan"}}
        {{else}}
          <ul>
            {{#each loans as |loan|}}
              {{#if (eq selectedLoan loan)}}
                <li>{{loan-list/card deleteLoan="deleteLoan" loan=loan}}</li>
              {{/if}}
            {{/each}}
          </ul>
        {{/if}}
        {{!-- <p> {{loan}} </p>
        <p> selected: {{selectedLoan}}</p> --}}
