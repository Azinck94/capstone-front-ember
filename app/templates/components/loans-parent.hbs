{{page-header title="Loans"}}
<div class="container-fluid">
  <div class="col-md-6">
    <h3>Tracked Loans</h3>
      {{#each loans as |loan|}}
        {{loan-list/card class="loans-list" deleteLoan="deleteLoan" loan=loan}}
      {{/each}}
    </div>
  <div class="col-md-6">
    <h3>Loan Comparison</h3>
    {{loans-graphs principal-data=principal-data interest-data=interest-data length-data=length-data
      loans=loans selectBarGraph="selectGraph" selectedBarGraph=selectedGraph options=options}}
      {{loan-list/create-loan-form class="create-form" createLoan="createLoan" loan=loan}}
  </div>
</div>
