{{page-header title="Loan"}}
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        {{#link-to "loans"}}
        back
        {{/link-to}}
        <h3>Your View</h3>
        <h3>{{loan.name}}</h3>
        <p>{{loan.lender}}</p>
        <p>{{loan.interest_rate}}</p>
        <p>{{loan.principal}}</p>
        <p>{{loan.loan_length}}</p>
      </div>
      <div class="col-md-6">
        <h3>Tools</h3>
          {{loans/tools-drop-down loan=loan selectTool="selectTool" selectedTool=selectedTool}}
      </div>
    </div>
  </div>
</div>
